{
  "name": "jopi-loader",
  "version": "1.0.13",
  "private": false,
  "license": "MIT",
  "keywords": ["loader"],
  "description": "Node ESM loader to take in charge non-JS assets (.scss/.sass/.css, images, fonts)",

  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },

  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "bin": {
    "jopin": "bin/jopin.js",
    "jopib": "bin/jopib.js"
  },

  "scripts": {
    "tsc": "npx tsc",
    "bun-publish": "bun publish",

    "remove-global": "npm remove jopi-loader --global",
    "update-global": "npm install jopi-loader@latest --global"
  },

  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@jopi-loader/tools": "workspace: *",
    "@jopi-loader/types": "workspace: *"
  },

  "nodeSwitch": true,
  "nodeSwitch-default": "node"
}