{
  "name": "jopi-loader",
  "version": "1.0.9",
  "private": false,
  "license": "MIT",
  "keywords": ["loader"],
  "description": "Node ESM loader to take in charge non-JS assets (.scss/.sass/.css, images, fonts)",
  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },
  "main": "./dist/index.js",
  "types": "types.d.ts",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "bun-publish": "bun publish"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types.d.ts"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/sass": "latest",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "esbuild": "^0.25.9",
    "jopi-node-space": "workspace: *",
    "jopi-rewrite": "workspace: *",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "sass": "^1.90.0"
  }
}