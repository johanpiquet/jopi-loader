{
  "name": "jopi-loader",
  "version": "1.0.26",
  "private": false,
  "license": "MIT",
  "keywords": ["loader"],
  "description": "Node ESM loader to take in charge non-JS assets (.scss/.sass/.css, images, fonts)",

  "engines": {
    "bun": ">=1.2.18",
    "node": ">=22.18.0"
  },

  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "src"
  ],

  "scripts": {
    "build": "npx tsc",
    "tsc": "npx tsc",

    "bun-publish": "npx tsc && bun publish",

    "remove-global": "npm remove jopi-loader --global",
    "update-global": "npm install jopi-loader@latest --global",

    "install-jopin": "rm ~/.bun/bin/jopin; ln -s /Users/johan/Projets/jopi-rewrite-workspace/_jopi-loader/jopi-loader/bin/jopin.js ~/.bun/bin/jopin",
    "install-jopib": "rm  ~/.bun/bin/jopib; ln -s /Users/johan/Projets/jopi-rewrite-workspace/_jopi-loader/jopi-loader/bin/jopib.js ~/.bun/bin/jopib",

    "untrack": "git rm -r --cached -- ./dist/**;"
  },

  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@jopi-loader/tools": "workspace:^1.0.20",
    "@jopi-loader/types": "workspace:^1.0.9"
  },

  "nodeSwitch": true,
  "nodeSwitch-default": "node"
}