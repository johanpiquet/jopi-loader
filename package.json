{
  "name": "jopi-loader",
  "version": "1.1.6",
  "private": false,
  "license": "MIT",
  "keywords": ["loader"],
  "description": "Node ESM loader to take in charge non-JS assets (.scss/.sass/.css, images, fonts)",

  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },

  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "bin": {
    "jopin": "bin/jopin.js",
    "jopib": "bin/jopib.js"
  },

  "scripts": {
    "build": "npx tsgo",
    "tsc": "npx tsc",

    "bun-publish": "npx tsc && bun publish",

    "remove-global": "npm remove jopi-loader --global",
    "update-global": "npm install jopi-loader@latest --global",

    "install-jopin": "ln -s /Users/johan/Projets/jopiWorkspace/_jopi-loader/jopi-loader/bin/jopin.js ~/.nvm/versions/node/v24.5.0/bin/jopin",
    "install-jopib": "ln -s /Users/johan/Projets/jopiWorkspace/_jopi-loader/jopi-loader/bin/jopib.js ~/.nvm/versions/node/v24.5.0/bin/jopib"
  },

  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@jopi-loader/tools": "workspace:^1.1.5",
    "@jopi-loader/types": "workspace:^1.1.4"
  },

  "nodeSwitch": true,
  "nodeSwitch-default": "node"
}