{
  "name": "jopi-loader",
  "version": "1.0.0",
  "private": false,
  "license": "MIT",
  "keywords": ["loader"],
  "type": "module",
  "description": "Node ESM loader to take in charge non-JS assets (.scss/.sass/.css, images, fonts)",

  "engines": {"bun": "^1.2.18", "node": ">=22.18.0"},

  "main": "./dist/index.js",
  "types": "types.d.ts",

  "scripts": {
    "tsc": "tsc",
    "npm-publish": "npm publish --access public"
  },

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types.d.ts"
    }
  },

  "devDependencies": {
    "@types/node": "latest",
    "@types/sass": "latest",
    "typescript": "5.9"
  },

  "dependencies": {
    "@deanc/esbuild-plugin-postcss": "^1.0.2",
    "esbuild": "^0.25.6",
    "jopi-node-space": "workspace:*",
    "jopi-rewrite": "workspace:*",
    "postcss": "^8.4.41",
    "postcss-modules": "^6.0.0",
    "sass": "^1.77.0"
  }
}